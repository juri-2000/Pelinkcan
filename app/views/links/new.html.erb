<header class="container-fluid bg-light w-100">
    <div class="row">
       <div class="header col-5"> 
        <%= link_to links_path do %>
         <%= image_tag 'pelinkcan.png' %>
        <% end %>
       </div>
       <div class="header col-7">
       </div>
    </div>  
</header>
<main>
   <div class="row main">
        <%= form_with model:@list, local:true do |f| %>
       <ul>
         <li class="name"><%= f.label :name, 'タイトル' %></li>
         <li><%= f.text_field :title, class: "hoge", size: "60x10"%></li>
         <li class="name"><%= f.label :name, 'URL' %></li>
         <li><%= f.text_field :url, class: "hoge", size: "60x10" %></li>
         <li class="name"><%= f.label :name, 'メモ' %></li>
         <li><%= f.text_field :body, class: "hoge", size: "60x10" %></li>
         <li class="color"> 
            <%# ↓これがアイコン %>
            <i class="fas fa-location-arrow" id="arrow-icon"></i>
            <%# ↓これがカラーピッカー %>
            <input type="color" class="arrow-icon-color-selector" id="arrow-icon-color-selector" value="#e66465">
         </li> 
         <li class="name"><%= f.submit "リンク作成" %></li>
       </ul>
         <% end %>
   </div>
</main>